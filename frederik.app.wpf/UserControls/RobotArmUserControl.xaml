<UserControl x:Class="frederik.app.wpf.UserControls.RobotArmUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:frederik.app.wpf.UserControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:RobotArmUserControl}">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="{Binding RobotArmViewModel.StationA.Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <CheckBox IsEnabled="False" 
                      IsChecked="{Binding RobotArmViewModel.StationA.Occupied, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" 
              />
        </StackPanel>

        <Grid Width="280">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Width="Auto" >
                <TextBlock Text="{Binding RobotArmViewModel.CurrentWafer.Name,Mode=OneWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                            Background="AliceBlue"/>
                <TextBlock></TextBlock>
                <TextBlock Text="{Binding RobotArmViewModel.CurrentStation.Name,Mode=OneWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                            Background="AliceBlue"/>
                <TextBlock Text="{Binding RobotArmViewModel.CurrentStation.Occupied,Mode=OneWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                            Background="AliceBlue"/>
                <TextBlock></TextBlock>
                <TextBlock Text="Is Rotating"/>
                <CheckBox IsEnabled="False" 
                      IsChecked="{Binding RobotArmViewModel.IsRotating, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                     /> 
                
            </StackPanel>
        </Grid>

        <StackPanel DockPanel.Dock="Right"  VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Text="{Binding RobotArmViewModel.StationB.Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <CheckBox IsEnabled="False" 
                      IsChecked="{Binding RobotArmViewModel.StationB.Occupied, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            />
        </StackPanel>
    </DockPanel>
</UserControl>
